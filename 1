#include<Keypad.h> 
#include<Wire.h>
#include<LCD.h>
#include<LiquidCrystal_I2C.h>
 #define I2C_ADDR 0x27 //defining the LCD pins
#define BACKLIGHT_PIN 3
#define En_pin 2
#define Rw_pin 1
#define Rs_pin 0
#define D4_pin 4
#define D5_pin 5
#define D6_pin 6
#define D7_pin 7
LiquidCrystal_I2C lcd(I2C_ADDR,En_pin,Rw_pin,Rs_pin,D4_pin,D5_pin,D6_pin,D7_pin);
const byte ROWS = 4; //four rows in the keypad
const byte COLS = 4; //four columns in the keypad
char keys[ROWS][COLS] = {
{'1', '2', '3', 'A'},
{'4', '5', '6', 'B'},
{'7', '8', '9', 'C'},
{'*', '0', '#', 'D'}
};
 

byte rowPins[ROWS] = {9,8,7,6}; 
byte colPins[COLS]= {5,4,3,2}; 


Keypad keypad = Keypad( makeKeymap(keys), rowPins, colPins, ROWS, COLS );


void setup(){

     Serial.begin(9600);
     lcd.begin (20,4);
     lcd.setBacklightPin(BACKLIGHT_PIN,POSITIVE);
     lcd.setBacklight(HIGH);
     lcd.home ();
     lcd.print("PRESS A KEY");
     delay(2000);

   
    keypad.addEventListener(keypadEvent); // Add an event listener for this keypad
}

void loop(){
    char key = keypad.getKey();

    if (key) {
        Serial.println(key);
    }
   
}
// Taking care of some special events.
void keypadEvent(KeypadEvent key){
    switch (keypad.getState()){
    case 1:
        if (key == 'A') {
            lcd.clear();

                        lcd.print("HELLO , MY NAME IS . FADI");
                        delay(1500);
                         lcd.clear();
                          lcd.print("Press a key");
        }
        
if (key == 'B') {
            lcd.clear();

                        lcd.print("I WANT TO TELL YOU . MY STORY");
                        delay(1500);
                         lcd.clear();
                          lcd.print("Press a key");
        }
    } 
    if (key == 'C') {
            lcd.clear();

                        lcd.print("IM WITH SPECAIL NEEDS BUT I LIKE TO TALK");
                        delay(1500);
                         lcd.clear();
                          lcd.print("Press a key");
        }
        if (key == 'D') {
            lcd.clear();

                        lcd.print("COULD WE MAKE A CONVERSATION ? ");
                        delay(1500);
                         lcd.clear();
                          lcd.print("Press a key");
        }
        if (key == '1') {
            lcd.clear();

                        lcd.print("HELLO");
                        delay(1500);
                         lcd.clear();
                          lcd.print("Press a key");
        }
                if (key == '2') {
            lcd.clear();

                        lcd.print("HOW ARE YOU");
                        delay(1500);
                         lcd.clear();
                          lcd.print("Press a key");
                }
                        if (key == '3') {
            lcd.clear();

                        lcd.print("IM FINE");
                        delay(1500);
                         lcd.clear();
                          lcd.print("Press a key");
                        }
                          if (key == '4') {
            lcd.clear();

                        lcd.print("WHATS UR NAME");
                        delay(1500);
                         lcd.clear();
                          lcd.print("Press a key");
                        }
                          if (key == '5') {
            lcd.clear();

                        lcd.print("NICE TO MEET YOU");
                        delay(1500);
                         lcd.clear();
                          lcd.print("Press a key");
                        }
                          if (key == '6') {
            lcd.clear();

                        lcd.print("IM HUNGRY , CAN I HAVE SOME FOOD ?");
                        delay(1500);
                         lcd.clear();
                          lcd.print("Press a key");
                        }
                                                  if (key == '7') {
            lcd.clear();

                        lcd.print("IM THIRSTY , CAN I HAVE SOME WATER ?");
                        delay(1500);
                         lcd.clear();
                          lcd.print("Press a key");
                        }
                                                  if (key == '8') {
            lcd.clear();

                        lcd.print("I HAVE TO GO TO THE BATHROOM");
                        delay(1500);
                         lcd.clear();
                          lcd.print("Press a key");
                        }
                         if (key == '9') {
            lcd.clear();

                        lcd.print("I NEED A SHOWER");
                        delay(1500);
                         lcd.clear();
                          lcd.print("Press a key");
                        }
                         if (key == '*') {
            lcd.clear();

                        lcd.print("I'M SLEEPY , CAN I GO TO MY BED");
                        delay(1500);
                         lcd.clear();
                          lcd.print("Press a key");
                        }
                         if (key == '0') {
            lcd.clear();

                        lcd.print("I'M FEELING SICK");
                        delay(1500);
                         lcd.clear();
                          lcd.print("Press a key");
                        }
                         if (key == '#') {
            lcd.clear();

                        lcd.print("CREATED BY : HUSSEIN RJOUB ");
                        delay(1500);
                         lcd.clear();
                          lcd.print("Press a key");
                        }


                         
                        }
